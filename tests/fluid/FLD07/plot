reset

#                     DATA INDEX
#  > delP_x =  0.0
#    * jmax = 128
#    * jmax = 256
#    * jmax = 512
#
#  > delP_x =  1.0
#    * jmax = 128
#    * jmax = 256
#    * jmax = 512
#
#  > delP_x = -1.0
#    * jmax = 128
#    * jmax = 256
#    * jmax = 512
#


# color definitions
set border linewidth 1.5
set style line 1 lt 2 lc rgb '#808080' lw 1 # black

set style line 4 lt 1 lc rgb '#ffa500' lw 1 # green
set style line 6 lt 1 lc rgb '#0000ff' lw 1 # blue
set style line 8 lt 1 lc rgb '#ff0000' lw 1 # orange-2

set style line 11 lt 2 lc rgb '#000000' lw 1 # black


scaled(x,val) = ( scld = x*val, scld)

LeeMoser = 'AUTOTEST/LM_Channel_0550_mean_prof.dat'

#-------------------------------------------------------------------------------------

set terminal wxt 1 size 900,400 enhanced

set multiplot layout 1,2 title

set ylabel "Streamwise Velocity, v (m/sec)"
set xlabel "Channel Width, x_ (m)"

set key inside right bottom

set xrange [*:*]
set yrange [*:*]

set title
plot LeeMoser using 1:(scaled(column(3),0.0543496)) w points \
        ls 1 pt 6 ps 0.5 title 'Lee and Moser, 2015', \
     'POST_VEL.dat' index 0 using 1:2 w points ls 2 title ' 8 mesh', \
     'POST_VEL.dat' index 1 using 1:2 w points ls 4 title '16 mesh', \
     'POST_VEL.dat' index 2 using 1:2 w points ls 6 title '32 mesh', \
     'POST_VEL.dat' index 3 using 1:2 w points ls 8 title '64 mesh'

set ylabel "Streamwise velocity, v/v_*"
set xlabel "Channel Width, xv_*{/Symbol r}/{/Symbol m}"

set key inside left top

set xrange [1:1000]
set yrange [5 : 25]


set logscale x

set title
plot LeeMoser using 2:3 w points ls 1 pt 6 ps 0.5 title 'Lee and Moser, 2015', \
     'POST_VEL.dat' index 0 using 3:4 w points ls 2 title ' 8 mesh', \
     'POST_VEL.dat' index 1 using 3:4 w points ls 4 title '16 mesh', \
     'POST_VEL.dat' index 2 using 3:4 w points ls 6 title '32 mesh', \
     'POST_VEL.dat' index 3 using 3:4 w points ls 8 title '64 mesh'

unset logscale x
unset logscale y
unset multiplot